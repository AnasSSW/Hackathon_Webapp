@model Hackathon.Models.DashboardViewModel
@{
    ViewData["Title"] = "แดชบอร์ด";
    ViewData["DisableMainCss"] = true;
}

@section Styles {
    <link rel="stylesheet" href="~/css/dashboard-style.css" asp-append-version="true" />
}

<h1>แดชบอร์ดโพสต์ของคุณ</h1>
<div class="main-section">

    <!-- Posts I created -->
    <div class="mb-5">
        <h2 class="section-title mb-3">โพสต์ที่ฉันสร้าง</h2>
        @if (Model.MyPosts != null && Model.MyPosts.Any())
        {
            <div class="cards-grid">
                @foreach (var post in Model.MyPosts)
                {
                    <div class="card home-card">
                        <img src="@(post.ImageUrl ?? "https://via.placeholder.com/400x200?text=No+Image")" class="card-img-top" alt="@post.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="author-name">โดย: @(post.Author?.FirstName ?? "N/A") @(post.Author?.LastName ?? "N/A")</p>
                            <p class="text-muted"><small>สมาชิก: @(post.Participants?.Count ?? 0) / @post.MaxParticipants</small></p>
                            @if (!string.IsNullOrEmpty(post.RequiredExpertise))
                            {
                                <div class="expertise-tags mb-3">
                                    @foreach (var expertise in post.RequiredExpertise.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge">@expertise.Trim()</span>
                                    }
                                </div>
                            }
                            <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Id" class="join-button">ดูรายละเอียด</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-posts-message">คุณยังไม่ได้สร้างโพสต์ใด ๆ</p>
        }
    </div>

    <hr class="section-divider" />

    <!-- Posts I joined -->
    <div class="mt-5">
        <h2 class="section-title mb-3">โพสต์ที่ฉันเข้าร่วม</h2>
        @if (Model.JoinedPosts != null && Model.JoinedPosts.Any())
        {
            <div class="cards-grid">
                @foreach (var post in Model.JoinedPosts)
                {
                    <div class="card home-card">
                        <img src="@(post.ImageUrl ?? "https://via.placeholder.com/400x200?text=No+Image")" class="card-img-top" alt="@post.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="author-name">โดย: @(post.Author?.FirstName ?? "N/A") @(post.Author?.LastName ?? "N/A")</p>
                            <p class="text-muted"><small>สมาชิก: @(post.Participants?.Count ?? 0) / @post.MaxParticipants</small></p>
                            @if (!string.IsNullOrEmpty(post.RequiredExpertise))
                            {
                                <div class="expertise-tags mb-3">
                                    @foreach (var expertise in post.RequiredExpertise.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                    {
                                        <span class="badge">@expertise.Trim()</span>
                                    }
                                </div>
                            }
                            <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Id" class="join-button">ดูรายละเอียด</a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="no-posts-message">คุณยังไม่ได้เข้าร่วมโพสต์ใด ๆ</p>
        }
    </div>
</div>
