@model Hackathon.Models.DashboardViewModel
@{
    ViewData["Title"] = "แดชบอร์ด";
    ViewData["DisableMainCss"] = true;
}

@section Styles {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/dashboard-style.css

" asp-append-version="true" />
    <style>
        .author-name {
            font-size: 0.9rem;
            color: #64748b;
            margin-bottom: 15px;
        }

        .join-button {
            padding: 10px 15px;
            border: none;
            background: linear-gradient(135deg, #28b2eb, #2575fc);
            color: white !important;
            font-weight: bold;
            border-radius: 25px;
            cursor: pointer;
            transition: 0.3s;
            text-decoration: none;
            display: inline-block;
        }

            .join-button:hover {
                background: linear-gradient(135deg, #ffb04c, #ff8c1a);
                transform: scale(1.05);
            }

        .card.home-card {
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .card-body {
            flex-grow: 1;
        }

        .expertise-tags .badge {
            font-size: 0.75rem;
            font-weight: 500;
            padding: 0.4em 0.8em;
            margin-right: 5px;
            margin-bottom: 5px;
        }
    </style>
}

<div class="container main-section">
    <h1 class="mb-4 text-center">แดชบอร์ดโพสต์ของคุณ</h1>

    <!-- Posts I created -->
    <div class="mb-5">
        <h2 class="section-title mb-3">โพสต์ที่ฉันสร้าง</h2>
        <div class="container">
            @if (Model.MyPosts != null && Model.MyPosts.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var post in Model.MyPosts)
                    {
                        <div class="col">
                            <div class="card home-card h-100">
                                <img src="@(post.ImageUrl ?? "https://via.placeholder.com/400x200?text=No+Image")" class="card-img-top" alt="@post.Title">
                                <div class="card-body">
                                    <h5 class="card-title">@post.Title</h5>
                                    <p class="author-name">โดย: @(post.Author?.FirstName ?? "N/A") @(post.Author?.LastName ?? "N/A")</p>
                                    <p class="text-muted"><small>สมาชิก: @(post.Participants?.Count ?? 0) / @post.MaxParticipants</small></p>
                                    @if (!string.IsNullOrEmpty(post.RequiredExpertise))
                                    {
                                        <div class="expertise-tags mb-3">
                                            @foreach (var expertise in post.RequiredExpertise.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                            {
                                                <span class="badge bg-secondary">@expertise.Trim()</span>
                                            }
                                        </div>
                                    }
                                    <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-primary join-button mt-auto">ดูรายละเอียด</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="col-12">
                    <p class="no-posts-message text-muted text-center">คุณยังไม่ได้สร้างโพสต์ใด ๆ</p>
                </div>
            }
        </div>
    </div>

    <hr class="section-divider" />

    <!-- Posts I joined -->
    <div class="mt-5">
        <h2 class="section-title mb-3">โพสต์ที่ฉันเข้าร่วม</h2>
        <div class="container">
            @if (Model.JoinedPosts != null && Model.JoinedPosts.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var post in Model.JoinedPosts)
                    {
                        <div class="col">
                            <div class="card home-card h-100">
                                <img src="@(post.ImageUrl ?? "https://via.placeholder.com/400x200?text=No+Image")" class="card-img-top" alt="@post.Title">
                                <div class="card-body">
                                    <h5 class="card-title">@post.Title</h5>
                                    <p class="author-name">โดย: @(post.Author?.FirstName ?? "N/A") @(post.Author?.LastName ?? "N/A")</p>
                                    <p class="text-muted"><small>สมาชิก: @(post.Participants?.Count ?? 0) / @post.MaxParticipants</small></p>
                                    @if (!string.IsNullOrEmpty(post.RequiredExpertise))
                                    {
                                        <div class="expertise-tags mb-3">
                                            @foreach (var expertise in post.RequiredExpertise.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                            {
                                                <span class="badge bg-secondary">@expertise.Trim()</span>
                                            }
                                        </div>
                                    }
                                    <a asp-action="Details" asp-controller="Post" asp-route-id="@post.Id" class="btn btn-primary join-button mt-auto">ดูรายละเอียด</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="col-12">
                    <p class="no-posts-message text-muted text-center">คุณยังไม่ได้เข้าร่วมโพสต์ใด ๆ</p>
                </div>
            }
        </div>
    </div>
</div>
