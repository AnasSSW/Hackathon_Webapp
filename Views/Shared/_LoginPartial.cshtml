@using Microsoft.AspNetCore.Identity
@using Hackathon.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="auth-actions">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null)
        {
            <a class="auth-button manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @user.FirstName</a>
        }
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="auth-button logout">Logout</button>
        </form>
    }
    else
    {
        <a class="auth-button register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a class="auth-button login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }
</div>
